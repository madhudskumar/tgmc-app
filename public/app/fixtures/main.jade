div.refresh-view
    i.uk-icon-refresh(ng-hide="hideBtn" style='font-size:34;' ng-click="refreshView()")
    i.uk-icon-refresh.uk-icon-spin(ng-show="hideBtn" style='font-size:34;')

div#gallery
    div.regHeader
        h1.reg.uk-vertical-align-middle.uk-container.uk-container-center(style='') FIXTURES
        
div.uk-container.uk-container-center.fixtures
    //@about:Finals
    h1.uk-h1(style='margin-bottom:12px;margin-top:20px') FINALS
        div.uk-container.uk-container-center.uk-grid(style='padding-top:12px;')
            p(style='color:lawngreen;padding:12px;margin:auto') BIET BUILDERS
                strong
                    em  vs.
                |  EC LOOSERS

    //@about:Semi Finals
    h1.uk-h1(style='border-bottom:2px solid green;margin-top:20px') SEMI FINALS - COMPLETED
        table.uk-table(style='text-align:left;font-size:20px;margin-top:20px')
            thead
                tr.uk-grid
                    th.uk-width-1-10
                        strong #
                    td.uk-width-3-10
                        strong MATCH
                    td.uk-width-3-10
                        strong DATE
                    td.uk-width-3-10
                        strong TIMING

            tbody
                tr#table-fixtures-4.uk-grid(ng-repeat='match in matches | toArray:false | filter:{round:4}' ng-hide='!match.teamOne.qualifiedForNext && !match.teamTwo.qualifiedForNext')
                    td.uk-width-1-10 {{$index + 1}}
                    td.uk-width-3-10
                        div(ng-hide='!match.teamOne.qualifiedForNext || !match.teamTwo.qualifiedForNext')
                            | <p class='uk-margin-top-0'> {{match.teamOne.teamName | uppercase}} <strong> VS </strong> {{match.teamTwo.teamName | uppercase}} </p>
                        div(ng-show='!match.teamOne.qualifiedForNext || !match.teamTwo.qualifiedForNext')
                            | <p class='uk-margin-top-0' ng-show='match.teamOne.qualifiedForNext' > <strong>{{match.teamOne.teamName | uppercase}}</strong> <i> - WON!</i> </p>
                            | <p class='uk-margin-top-0' ng-show='match.teamTwo.qualifiedForNext' > <strong>{{match.teamTwo.teamName | uppercase}}</strong> <i> - WON!</i> </p>

                    td.uk-width-3-10
                        div
                            p {{match.matchDate | date:'EEE, d-MMM-yyyy'}}


                    td.uk-width-3-10
                        div
                            p {{match.matchTime | date:'h:mm a'}}

        hr

    //@about:third round
    h1.uk-h1(style='border-bottom:2px solid green;margin-top:20px;font-size:20px') THIRD ROUND - COMPLETED
    //@about:second round
    h1.uk-h1(style='border-bottom:2px solid green;margin-top:20px;font-size:20px') SECOND ROUND - COMPLETED
    //@about:first round
    h1.uk-h1(style='border-bottom:2px solid green;font-size:20px') FIRST ROUND - COMPLETED

